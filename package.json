{
  "name": "nucal-ui-application",
  "version": "0.1.0",
  "description": "NUCAL Frontend Application",
  "scripts": {
    "setup": "npm install && vue-cli-service lint --fix",
    "lint": "vue-cli-service lint",
    "fix": "eslint --fix .",
    "build:web": "export NODE_OPTIONS=--openssl-legacy-provider && vue-cli-service build --mode production.web --env.production --env.web",
    "serve:web": "export NODE_OPTIONS=--openssl-legacy-provider && vue-cli-service serve --mode development.web --env.development --env.web",
    "setup-webpack-config": "node ./node_modules/vue-cli-plugin-vuexp/lib/scripts/webpack-maintenance pre",
    "version-check": "vue -V && nativescript --version && pod --version && npm -v && node -v && tns --version && xcodebuild -version",
    "remove-webpack-config": "node ./node_modules/vue-cli-plugin-vuexp/lib/scripts/webpack-maintenance post"
  },
  "dependencies": {
    "lodash-es": "4.17.15",
    "nucal-widget-lib": "0.13.28",
    "vue": "2.7.14",
    "vue-router": "3.6.5"
  },
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@babel/preset-env": "7.21.5",
    "@babel/traverse": "7.21.5",
    "babel-eslint": "10.0.1",
    "@vue/cli-plugin-babel": "5.0.8",
    "@vue/cli-plugin-eslint": "4.0.5",
    "@vue/cli-service": "4.0.5",
    "@vue/eslint-config-airbnb": "5.3.0",
    "@vue/eslint-config-prettier": "4.0.1",
    "babel-loader": "8.3.0",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "6.2.2",
    "lint-staged": "10.5.4",
    "node-sass": "8.0.0",
    "sass-loader": "10.4.1",
    "webpack": "4.46.0",
    "webpack-cli": "4.10.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb",
      "@vue/prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/no-cycle": 0,
      "no-console": 1,
      "import/extensions": 0,
      "global-require": 0,
      "eol-last": 0,
      "no-param-reassign": 0,
      "object-curly-newline": 0,
      "no-plusplus": 0,
      "max-len": [
        1,
        {
          "code": 9999
        }
      ],
      "prefer-destructuring": [
        2,
        {
          "object": true,
          "array": false
        }
      ],
      "no-irregular-whitespace": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 160,
    "trailingComma": "all"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "eslintIgnore": [
    "webpack.config.js"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
